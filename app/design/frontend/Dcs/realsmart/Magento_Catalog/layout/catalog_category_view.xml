<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
		<referenceBlock name="category.product.addto.compare" remove="true"/>
		
		<referenceContainer name="sidebar.main">
       		<block class="Magento\Cms\Block\Block" name="category_left_side_image">
            	<arguments>
                	<argument name="block_id" xsi:type="string">category_left_side_image</argument>
            	</arguments>
        	</block>
    	</referenceContainer>
		
		<move element="category.description" destination="content" after="category.products"/>
		
    </body>
</page>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
<system>
	 <!-- Add new Tab -->
	<!--<tab id="faq_tab" translate="label" sortOrder="300">
		<label>23 Digital Menu</label>
	</tab>-->
	<section id="faq_section" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
		<label>FAQ</label>
		<tab>dcs</tab>
		<!-- resource tag name which we have to defined in the acl.xml -->
		<resource>Dcs_Faq::config_faq</resource>
		<group id="general_group" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
			<label>General Options</label>
			<field id="frontend_enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>Enable Extensions</label>
				<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
			</field>
		</group>		 
	</section>
</system>
</config>